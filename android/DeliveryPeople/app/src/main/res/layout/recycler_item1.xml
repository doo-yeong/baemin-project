<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#BD9467"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="100dp"
            android:id="@+id/rv_menu_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="삼겹한상"
            app:layout_constraintRight_toLeftOf="@id/rv_menu_iv"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="13000원"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rv_menu_name_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/rv_menu_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/rv_menu_iv"
            android:src="@drawable/table_1_15"
            android:scaleType="centerCrop"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toRightOf="@id/rv_menu_name_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>

